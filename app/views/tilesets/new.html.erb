<% if @tileset.errors.any? %>
  <div id="error_explanation">
    <ul>
    <% @tileset.errors.full_messages.each do |msg| %>
      <li>* <%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<div id="uploadform">
<%= form_for :tileset, url: {action: "create"}, html: { multipart: true } do |form| %>
  <div>
    <%= form.label :name, 'Name: ' %>
    <%= form.text_field :name %>
  </div>
  <div>
    <%= form.label :tileset_data, 'Tileset: ' %>
    <%= form.file_field :tileset_data %>
  </div>
  <div>
    <%= form.label :tilemap, 'Tilemap: '  %>
    <%= form.file_field :tilemap %>
  </div>
  <div>
    <%= form.submit("Upload") %>
  </div>
<% end %>
</div>


<% content_for :inline_styles do %>
<style>
    #uploadform form {
      background: #DDD;
      width: 400px;
      margin: 0 auto;
      padding: 1px 0;
    }
    #uploadform form div {
      margin: 20px 10px;
      padding: 10px;
      background: #CDCDCD;
    }
</style>
<% end %>
